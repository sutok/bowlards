# FastAPI用Dockerfile (開発環境用)
FROM python:3.13-slim

# 作業ディレクトリを設定
WORKDIR /app

# システムパッケージを更新し、必要なパッケージをインストール
RUN apt-get update && apt-get install -y \
    curl \
    gcc \
    g++ \
    git \
    gosu \
    && rm -rf /var/lib/apt/lists/*

# uvのインストール
RUN pip install uv

# 非rootユーザーを作成
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app

# アプリケーションコードをコピー
COPY --chown=app:app backend/ .

# エントリーポイントスクリプトをコピー
COPY docker/backend/entrypoint.dev.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# appユーザーに切り替え
USER app

# 依存関係のインストール（開発用）
RUN uv sync --dev

# rootユーザーに戻す（エントリーポイントで権限調整するため）
USER root

# ポートを公開
EXPOSE 8000

# ヘルスチェック
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# エントリーポイントを設定
ENTRYPOINT ["/entrypoint.sh"]

# アプリケーションを実行（リロード有効）
CMD ["uv", "run", "uvicorn", "app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"]
