# フロントエンド用Firebase設定（本番環境）
VITE_FIREBASE_API_KEY=your-production-api-key
VITE_FIREBASE_AUTH_DOMAIN=youro-prohect-name.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=bowlards-prod
VITE_FIREBASE_STORAGE_BUCKET=youro-prohect-name.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# バックエンドAPI設定（本番環境）
VITE_API_BASE_URL=https://your-api-domain.com/api

# バックエンド用Firebase設定（本番環境）
APP_FIREBASE_PROJECT_ID=bowlards-prod
APP_FIREBASE_CREDENTIALS_PATH=/app/credentials/bowlards-prod-service-account.json
# または環境変数で認証情報を設定
# APP_FIREBASE_PRIVATE_KEY=your-private-key
# APP_FIREBASE_CLIENT_EMAIL=your-client-email

# アプリケーション設定（本番環境）
APP_ENV=production
APP_PORT=8080
APP_HOST=0.0.0.0
APP_DEBUG=false
APP_SECRET_KEY=your-production-secret-key

# ログ設定（本番環境）
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS設定（本番環境）
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type

# データベース設定（本番環境）
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USER=bowlards_prod
DB_PASSWORD=your-production-db-password
DB_NAME=bowlards_production
