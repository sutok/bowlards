# 本番環境用環境変数

# フロントエンド用Firebase設定
VITE_FIREBASE_API_KEY=your-production-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=bowlards-dev
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# バックエンドAPI設定
VITE_API_BASE_URL=https://your-api-domain.com/api

# バックエンド用Firebase設定
APP_FIREBASE_PROJECT_ID=bowlards-dev
APP_FIREBASE_CREDENTIALS_PATH=./credentials/firebase-service-account.json
# または環境変数で認証情報を設定
# APP_FIREBASE_PRIVATE_KEY=your-private-key
# APP_FIREBASE_CLIENT_EMAIL=your-client-email

# 本番環境設定
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=your-production-secret-key

# CORS設定（本番環境用）
APP_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
